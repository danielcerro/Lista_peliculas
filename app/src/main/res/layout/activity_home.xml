        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rdg" />

    <Spinner
        android:id="@+id/spngenero"
        android:layout_width="318dp"
